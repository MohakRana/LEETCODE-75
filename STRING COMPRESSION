class Solution {
public:
    int compress(vector<char>& chars) {
      int n = chars.size();
      int j = 0;
       for(int i = 0 ; i<n ; ) {
        char current = chars[i];
        int count = 0;
        while(i<n && chars[i] == current){
            count++;
            i++;
        }
        chars[j++] = current ;
        if(count>1){
            for(char c : to_string(count)){
                chars[j++] = c ;
            }
        }
       }
   return j ; }  
};
